---
interface Props {
	title?: string;
}
const { title = "Iniciar sesi√≥n" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="noindex, nofollow" />
		<title>{title}</title>
	</head>
	<body class="auth">
		<main class="auth-container">
			<slot />
		</main>
	</body>
</html>

<style>
	:root {
		color-scheme: light dark;
	}
	html,
	body {
		margin: 0;
		min-height: 100%;
		font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
	}
	.auth-container {
		min-height: 100dvh;
		display: grid;
		place-items: center;
		padding: 2rem;
		background: linear-gradient(
				180deg,
				rgba(0, 46, 110, 0.06),
				transparent 40%
			),
			#f7f7f8;
	}
</style>
