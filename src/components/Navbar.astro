<script>
	document.addEventListener("DOMContentLoaded", () => {
		const navbar = document.getElementById("navbar");
		const hamburger = document.getElementById("hamburger");
		const navLinks = document.getElementById("nav-links");

		const dropdown = document.querySelector(".nav-item.dropdown");
		const dropdownBtn = dropdown?.querySelector("button.dropdown-trigger");

		if (!navbar || !hamburger || !navLinks) return;

		const threshold = 120;
		let isCompact = false;

		const isDesktop = () => window.innerWidth >= 921;
		const isMobileMenuMode = () => window.innerWidth <= 1120;

		const closeDropdown = () => {
			if (!dropdown) return;
			dropdown.classList.remove("open");
			dropdownBtn?.setAttribute("aria-expanded", "false");
		};

		const toggleDropdown = () => {
			if (!dropdown) return;
			const isOpen = dropdown.classList.toggle("open");
			dropdownBtn?.setAttribute("aria-expanded", String(isOpen));
		};

		const updateLayout = () => {
			const html = document.documentElement;
			if (html.classList.contains("modal-open")) return;

			const scrollY = window.scrollY;

			if (isDesktop()) {
				if (scrollY > threshold && !isCompact) {
					navbar.classList.add("compact");
					isCompact = true;
				} else if (scrollY <= threshold && isCompact) {
					navbar.classList.remove("compact");
					isCompact = false;
				}
			}
		};

		updateLayout();

		window.addEventListener("scroll", updateLayout);
		window.addEventListener("resize", updateLayout);

		hamburger.addEventListener("click", (e) => {
			e.stopPropagation();
			navLinks.classList.toggle("show");
			closeDropdown();
		});

		window.addEventListener("scroll", () => {
			if (navLinks.classList.contains("show")) {
				navLinks.classList.remove("show");
				closeDropdown();
			}
		});

		document.addEventListener("click", (e) => {
			if (
				navLinks.classList.contains("show") &&
				!navLinks.contains(e.target) &&
				!hamburger.contains(e.target)
			) {
				navLinks.classList.remove("show");
				closeDropdown();
			}
		});

		dropdownBtn?.addEventListener("click", (e) => {
			if (!isMobileMenuMode()) return;
			e.preventDefault();
			e.stopPropagation();
			toggleDropdown();
		});

		document.addEventListener("click", (e) => {
			if (!isMobileMenuMode()) return;
			if (!dropdown) return;

			if (
				dropdown.classList.contains("open") &&
				!dropdown.contains(e.target)
			) {
				closeDropdown();
			}
		});

		window.addEventListener("resize", () => {
			if (!isMobileMenuMode()) closeDropdown();
		});
	});
</script>
